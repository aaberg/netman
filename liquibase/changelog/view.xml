<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2025-10-22" author="Lars Aaberg">
        <createTable tableName="view_contact_list">
            <column name="contact_id" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_view_contact_list" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="tenant_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="contact_info" type="varchar(255)" />
            <column name="contact_info_icon" type="varchar(15)" />
            <column name="labels" type="varchar(255)" />
            <column name="has_updates" type="boolean" />
        </createTable>
        <createIndex tableName="view_contact_list" indexName="idx_view_contact_list_tenant_id">
            <column name="tenant_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="2026-01-15-1" author="Lars Aaberg">
        <createTable tableName="view_labels">
            <column name="label" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="tenant_id" type="bigint">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addPrimaryKey tableName="view_labels" columnNames="label" constraintName="pk_view_labels"/>
        <createIndex tableName="view_labels" indexName="idx_view_labels_tenant_id">
            <column name="tenant_id"/>
        </createIndex>
    </changeSet>
    
    <changeSet id="2026-01-15-2" author="Lars Aaberg">
        <dropPrimaryKey tableName="view_labels" constraintName="pk_view_labels"/>
        <addPrimaryKey tableName="view_labels" columnNames="label,tenant_id" constraintName="pk_view_labels"/>
    </changeSet>
</databaseChangeLog>