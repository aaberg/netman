<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2025-09-02:2" author="Lars Aaberg">
        <createTable tableName="profile">
            <column name="user_id" type="uniqueidentifier">
                <constraints primaryKey="true" primaryKeyName="pk_profile" />
            </column>
            <column name="name" type="text">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2025-09-04:1" author="Lars Aaberg">
        <addColumn tableName="profile">
            <column name="initials" type="varchar(10)" defaultValue="NA">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>