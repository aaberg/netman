# Environment variables for local development
# Copy this file to .env and adjust values as needed

# API URL - when running web locally, point to dockerized API
NETMAN_API_URL=http://localhost:8081

# Hanko authentication URL - accessible from browser
PUBLIC_HANKO_API_URL=http://localhost:8000

# OpenTelemetry Configuration
# Enable Azure Monitor exporter (disabled by default)
OTEL_EXPORTER_AZUREMONITOR_ENABLED=false
# Azure Application Insights connection string (required when enabled)
OTEL_EXPORTER_AZUREMONITOR_CONNECTION_STRING=
# Service name for telemetry (optional, defaults to "netman-web")
OTEL_SERVICE_NAME=netman-web
# Sampling ratio 0-1 (optional, defaults to 0.1 for 10% sampling to reduce telemetry volume)
OTEL_SAMPLING_RATIO=0.1
